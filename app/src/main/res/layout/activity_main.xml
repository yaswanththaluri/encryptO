<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_home">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/info"
        android:layout_margin="22dp"
        android:id="@+id/info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="encryptO"
        android:textSize="40sp"
        android:id="@+id/head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="#006699"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#006699"
        android:layout_below="@id/head"
        android:layout_marginTop="10dp"
        android:id="@+id/line"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/line">


        <TextView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:text="enCrypt"
            android:transitionName="trans1"
            android:background="@drawable/circle_one"
            android:gravity="center"
            android:id="@+id/encrypt"
            android:fontFamily=""
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:layout_marginStart="30dp"
            android:layout_above="@id/decrypt"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:transitionName="trans2"
            android:text="deCrypt"
            android:layout_marginEnd="30dp"
            android:background="@drawable/circle_two"
            android:gravity="center"
            android:id="@+id/decrypt"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hisTory"
            android:background="@drawable/circle_three"
            android:gravity="center"
            android:transitionName="trans3"
            android:textColor="#ffffff"
            android:layout_marginStart="60dp"
            android:id="@+id/history"
            android:layout_below="@id/decrypt"
            android:layout_marginBottom="50dp"
            android:textSize="22sp"/>
    </RelativeLayout>

</RelativeLayout>